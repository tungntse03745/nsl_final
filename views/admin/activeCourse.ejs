<%- layout ('../common/admin-template.ejs') %>
<!-- Page Content -->
<div id="page-content-wrapper" ng-controller="activeCourseCtr">
	<div class="container-fluid">
		<div class="panel panel-default panel-table">
			<div class="panel-heading">
				<div class="row">
					<div class="col col-xs-3">
						<h3 class="panel-title bold">Kích Hoạt Khóa Học</h3>
					</div>
					<div class="col col-xs-3">
						<select class="form-control" ng-model="searchStatus">
					      <option ng-value="false">Chưa Thanh Toán</option>
					      <option ng-value="true">Đã Thanh Toán</option>
					    </select>
					</div>
					<div class="col col-xs-6">
						<input type="text" class="form-control" placeholder="Search by note" ng-model="searchNote">
					</div>
				</div>
			</div>
			<div class="panel-body">
				<table class="table table-striped table-bordered table-list">
					<thead>
						<tr>
							<th>Họ Tên</th>
							<th>Tên Khóa Học</th>
							<th>Ghi Chú</th>
							<th>Giá</th>
							<th>Ngày Đặt Hàng</th>
							<th class="text-center">Action</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="order in orders">
							<td>{{order.student.fullname}}</td>
							<td><a href="/course/view/{{order.course.id}}" target="_blank">{{order.course.name}}</a></td>
							<td>{{order.note}}</td>
							<td>{{order.cost | vnd}}</td>
							<td>{{order.datePay | datetime}}</td>
							<td align="center">
								<a ng-if="!order.status" class="btn btn-success" ng-click="active(order.id)" data-toggle="modal" data-target="#viewTeacherModal">Kích Hoạt</a>
								<a ng-if="order.status" class="btn btn-danger" ng-click="active(order.id)" data-toggle="modal" data-target="#viewTeacherModal">Hủy Kích Hoạt</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="panel-footer">
				<div class="row">
					<div class="col col-xs-4">Page {{pagging.current + 1}} of {{pagging.pages}}
					</div>
					<div class="col col-xs-8">
						<ul class="pagination hidden-xs pull-right">
							<li><button class="btn btn-default" ng-click="prePage()">«</button></li>
							<li><button class="btn btn-default" ng-click="nextPage()">»</button></li>
						</ul>
					</div>
				</div>
			</div>
		</div>

	
</div>