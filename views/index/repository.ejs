		<% for(var i=0; i < courses.length; i++) { %>
		<div class="col-md-4 col-sm-6 col-xs-12">
			<a href="/repository/edit/<%= courses[i].id %>" class="thumbnail relative text-decoration-none">
				<img src="<%= courses[i].picture%>" class="img-responsive" alt="" />
				<h5 class="course-title"><%= courses[i].name%></h5>
				<div class="container-fluid">
					<div class="row">
						<div class="col-xs-6">
						</div>
						<div class="col-xs-6">
							<div class="course-sale">
								<!-- EJS -->
								<% if(courses[i].price < courses[i].oldPrice) { %>
								<span class="old-price">Giá cũ: {{'<%= courses[i].oldPrice%>'| vnd}}</span>
								<%}%>
								<!-- EJS END -->
								<span class="new-price">{{'<%= courses[i].price%>'| vnd}}</span>
							</div>
						</div>
					</div>
				</div>
				<!-- EJS -->
				<% if(courses[i].price < courses[i].oldPrice) { %>
